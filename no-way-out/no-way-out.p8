function makeb(x,y,t)
 return {x=x,y=y,t=t}
end

function _init()
 p={x=1,y=1,d=0,sp=4,grab=false}
 c={x=60,y=16}
 b={makeb(0,0,1),
    {x=4,y=4,t=2},
    {x=7,y=7,t=1},
    {x=6,y=7,t=1},
    {x=7,y=6,t=1}}
 lvl={x=8,y=8}
end

function _update60()
 nd=p.d
 dp={x=0,y=0}
 np={x=p.x,y=p.y}
 if btn(ðŸ…¾ï¸) then
  p.grab=true
